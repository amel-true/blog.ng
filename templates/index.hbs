<!DOCTYPE html>
<html>
  <head>
    {{>head}}
  </head>
  <body>
    {{>aside}}
    <section id=content>
      <h1>{{title}}</h1>

      <ul class=post-list>
      {{#each articles}}
        <li>
          <a href="{{path}}">{{title}}</a>
          /
          <span class=post-list-date>{{date}}</span>
        </li>
      {{/each}}
      </ul>
    </section>
    {{>footer}}
  </body>
</html>
